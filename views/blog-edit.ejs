<% include ./partials/header %>

<div class="ui main text container segment">
  <header class="ui huge header">Edit : <%= blog.title %></header>
  <p><%= blog._id %></p>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
      <label>Image url</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="field">
      <label>Description</label>
      <textarea name="blog[body]"><%= blog.body %></textarea>
    </div>

    <input class="ui basic violet big button" type="Submit">
    <a href="/blogs/<%= blog._id %>" class="ui basic blue big button">Cancel</a>
  </form>
</div>

<% include ./partials/footer %>
